    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFCA28</item>
        <item name="colorPrimaryDark">#FFB300</item>
        <item name="colorAccent">#000000</item>
